
<div class="container" >
<%= search_form_for @q do |f| %>

  <div class="form-group" id="section">
    <h1>Search Activities</h1>

    <%= f.search_field :name_or_desc_or_org_name_or_org_zip_cont, :placeholder => "enter activity or zipcode" , :class => "form-control" %>

  </div>

<% end %>
  <div class="row" id="results">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= %></h3>
        </div>

          <div class="panel-body">
            <div class="row">
              <div class="col-md-5 col-sm-offset-1 col-sm-3 col-md-offset-2">
                <dl class="dl-horizontal">
                  <dt></dt>
                  <dd><%=  %></dd>

                  <dt></dt>
                  <dd><%=  %></dd>
                </dl>
              </div>
            </div>
          </div>
          <table>
            <thead>
              <tr>
                <th>Organization</th>
                <th>Event</th>
                <th>Description</th>
               </tr>
            </thead>
            <tbody>
              <% @activities.each do |activity| %>
              <tr>
                <td class="coords" data-lat="<%= activity.latitude %>" data-lon="<%=activity.longitude %>"><%= link_to activity.org.name, "/orgs/#{activity.org_id}" %> <%= @activity %></a></td>
                <td><%= link_to activity.name %></td><td><%= activity.desc %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>


    <div class="col-md-6">
      <div id="map"></div>
    </div>
  </div>
</div>

