<h1>Listing orgs</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Name</th>
      <th>Rating</th>
      <th>Phone number</th>
      <th>Contact name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orgs.each do |org| %>
      <% org.activities.each do |activity| %>
        <%= activity.name %>
      <% end %>
      <tr>
        <td><%= org.street %></td>
        <td><%= org.city %></td>
        <td><%= org.state %></td>
        <td><%= org.zip %></td>
        <td><%= org.name %></td>
        <td><%= org.rating %></td>
        <td><%= org.phone_number %></td>
        <td><%= org.contact_name %></td>
        <td><%= org.email %></td>
        <td><%= link_to 'Show', org %></td>
        <td><%= link_to 'Edit', edit_org_path(org) %></td>
        <td><%= link_to 'Destroy', org, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Org', new_org_path %>
